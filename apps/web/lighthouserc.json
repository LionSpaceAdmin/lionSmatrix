{
  "ci": {
    "collect": {
      "startServerCommand": "npm run build && npm run start",
      "startServerReadyPattern": "ready on",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/daily-brief",
        "http://localhost:3000/archive",
        "http://localhost:3000/auth/sign-in",
        "http://localhost:3000/dashboard",
        "http://localhost:3000/dashboard/war-machine",
        "http://localhost:3000/academy",
        "http://localhost:3000/trust",
        "http://localhost:3000/enterprise"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "screenEmulation": {
          "mobile": false,
          "width": 1920,
          "height": 1080,
          "deviceScaleFactor": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["error", { "minScore": 0.9 }],
        "categories:pwa": "off",
        
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "first-contentful-paint": ["error", { "maxNumericValue": 1800 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 200 }],
        "interactive": ["error", { "maxNumericValue": 3800 }],
        "speed-index": ["error", { "maxNumericValue": 3400 }],
        
        "uses-responsive-images": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "warn",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        
        "color-contrast": "error",
        "heading-order": "error",
        "link-name": "error",
        "button-name": "error",
        "aria-required-attr": "error",
        "aria-valid-attr": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage",
      "githubToken": "$GITHUB_TOKEN",
      "githubAppToken": "$GITHUB_APP_TOKEN"
    },
    "server": {
      "port": 9001,
      "storage": {
        "storageMethod": "sql",
        "sqlDatabasePath": "./lighthouse-ci.db"
      }
    }
  }
}
