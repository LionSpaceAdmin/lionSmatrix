# ================================================================
# Lions of Zion Platform - Environment Variables Template
# ================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ================================================================
# üîê SECURITY & AUTHENTICATION
# ================================================================

# JWT Secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_chars

# NextAuth.js Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_chars

# NextAuth.js URL (development/production)
NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_URL=https://your-domain.com  # For production

# ================================================================
# üåê OAUTH PROVIDERS
# ================================================================

# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitter OAuth (https://developer.twitter.com/)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Magic Link Email Provider
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@gmail.com
EMAIL_SERVER_PASSWORD=your_app_password
EMAIL_FROM=noreply@lionsofzion.com

# ================================================================
# ‚òÅÔ∏è GOOGLE CLOUD PLATFORM
# ================================================================

# GCP Project Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Service Account (download JSON from GCP Console)
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account-key.json
# Alternative: Use service account JSON content as string
# GCP_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.5-pro

# Google Cloud Storage
GCS_BUCKET_NAME=lions-of-zion-storage
GCS_CDN_URL=https://storage.googleapis.com/lions-of-zion-storage

# ================================================================
# ü§ñ AI SERVICES
# ================================================================

# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (backup/alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# ================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://lions_user:your_secure_password@localhost:5432/lions_of_zion
# For production with connection pooling:
# DATABASE_URL=postgresql://user:pass@host:5432/dbname?pgbouncer=true&connection_limit=10

# Redis Cache
REDIS_URL=redis://localhost:6379
# For production with authentication:
# REDIS_URL=redis://username:password@host:6379

# ================================================================
# üöÄ DEPLOYMENT & HOSTING
# ================================================================

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Environment
NODE_ENV=development
# NODE_ENV=production  # For production

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=https://lionsofzion.com  # For production

# ================================================================
# üåç INTERNATIONALIZATION
# ================================================================

# Supported locales
NEXT_PUBLIC_SUPPORTED_LOCALES=en,he,es,fr,de,ar
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Translation services (optional)
GOOGLE_TRANSLATE_API_KEY=your_translate_api_key

# ================================================================
# üìä ANALYTICS & MONITORING
# ================================================================

# Application Insights / Analytics
ANALYTICS_ID=your_analytics_id_here

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=lions-of-zion

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true

# ================================================================
# üõ°Ô∏è WAR MACHINE CONFIGURATION
# ================================================================

# War Machine Tools
NEXT_PUBLIC_WAR_MACHINE_ENABLED=true

# C2PA Content Provenance
C2PA_ENABLED=false  # Set to true when implementing real C2PA
C2PA_PRIVATE_KEY_PATH=./path/to/c2pa-private-key.pem
C2PA_CERTIFICATE_PATH=./path/to/c2pa-certificate.pem

# Fact-checking APIs
FACT_CHECK_API_KEY=your_fact_check_api_key
FACT_CHECK_API_URL=https://factchecktools.googleapis.com/v1alpha1

# Image Analysis
IMAGE_ANALYSIS_API_KEY=your_image_analysis_key
IMAGE_ANALYSIS_PROVIDER=google_vision  # Options: google_vision, aws_rekognition

# ================================================================
# üîß DEVELOPMENT SETTINGS
# ================================================================

# Hot Reload Configuration
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=2000

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1
TURBO_TELEMETRY_DISABLED=1

# Node.js optimization
NODE_OPTIONS=--max-old-space-size=4096

# Debug mode
DEBUG=false
# DEBUG=true  # Enable for detailed logging

# ================================================================
# üß™ TESTING & CI/CD
# ================================================================

# Test database (separate from main database)
TEST_DATABASE_URL=postgresql://lions_user:password@localhost:5432/lions_of_zion_test

# Playwright testing
PLAYWRIGHT_BROWSER=chromium  # Options: chromium, firefox, webkit

# CI/CD
CI=false
# CI=true  # Automatically set in CI environments

# ================================================================
# üîê SECURITY HEADERS & FEATURES
# ================================================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# HTTPS/Security
FORCE_HTTPS=false  # Set to true in production
SECURITY_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ================================================================
# üìß EMAIL CONFIGURATION
# ================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false  # true for 465, false for other ports
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Templates
EMAIL_TEMPLATES_PATH=./templates/emails

# ================================================================
# üíæ STORAGE & CDN
# ================================================================

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# CDN Configuration
CDN_URL=https://cdn.lionsofzion.com
CDN_ENABLED=false  # Set to true when CDN is configured

# ================================================================
# üè• HEALTH CHECKS & MONITORING
# ================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Uptime monitoring
UPTIME_MONITORING_URL=your_uptime_monitoring_webhook

# ================================================================
# üìù LOGGING
# ================================================================

# Log Configuration
LOG_LEVEL=info  # Options: error, warn, info, debug
LOG_FORMAT=json  # Options: json, text

# Log destinations
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/application.log

# ================================================================
# üåê CORS & API CONFIGURATION  
# ================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# CORS_ORIGINS=https://lionsofzion.com,https://app.lionsofzion.com  # Production

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000  # Requests per hour per IP

# ================================================================
# END OF CONFIGURATION
# ================================================================

# üîî IMPORTANT NOTES:
# 1. Never commit .env.local to version control
# 2. Use strong, unique passwords and secrets
# 3. Regularly rotate API keys and secrets
# 4. Use different values for development/staging/production
# 5. Set up proper monitoring and alerting for production