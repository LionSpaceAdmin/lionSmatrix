#!/bin/bash

# Lionspace macOS App Launcher
# This is the main executable for the dock application

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
APP_DIR="$(dirname "$(dirname "$SCRIPT_DIR")")"
PROJECT_DIR="$(dirname "$APP_DIR")"

# Launch the main script with GUI support
osascript -e 'tell application "Terminal"
    activate
    set newWindow to do script "cd \"'$PROJECT_DIR'\" && ./scripts/launch-lionspace.sh"
    set current settings of newWindow to settings set "Pro"
    set bounds of front window to {100, 100, 1200, 800}
end tell'