
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "LionSpace Base Config",
  "compilerOptions": {
    // Strict Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    
    // Module Resolution
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // JavaScript Support
    "allowJs": true,
    "checkJs": false,
    
    // Emit
    "noEmit": true,
    "incremental": true,
    
    // Language and Environment (defaults - can be overridden)
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.turbo",
    "**/coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
